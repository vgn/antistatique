{% extends "layout.html.twig" %}

{% block title %}{{ 'homepage.title' | trans }}{% endblock %}
{% block meta_description%}Agence Web romande basée à Lausanne. Création de sites Internet, applications mobiles. Experts Magento, Symfony, JavaScript — Suisse, Genève, Fribourg{% endblock %}
{% block baseline %}
    <div id="baseline">
        <section>
            <h1 class="title-separation">
                <span></span>
                {# {{ 'homepage.baseline' | trans }} #}
                Nous&nbsp;sommes <a href="{{ path('team') }}">des&nbsp;artisans du&nbsp;web</a>, curieux&nbsp;et&nbsp;<a href="/blog">exigeants</a>. 
            </h1>
            <a href="{{ path('contact') }}" class="action-contact">{{ 'homepage.contact' | trans }}</a>
        </section>
    </div>
{% endblock %}

{% block content %}
<section id="content">
    <div id="work">
        <h3 class="title-separation">
            <span></span>
            {{ 'homepage.work.title' | trans }}
        </h3>
        <div class="works">
            <a id="tw" href="{{ path('portfolio_show', { slug: 'tehran' }) }}" class="last">
                <hgroup>
                    <h3>{{ 'homepage.work.tehran.title' | trans }}</h3>
                    <h5 class="title-separation x-long-sep magenta-sep">
                        <span></span>
                        {{ 'homepage.work.tehran.baseline' | trans }}
                    </h5>
                </hgroup>
            </a>
            <a id="derham" href="{{ path('portfolio_show', { slug: 'derham' }) }}">
                <hgroup>
                    <h3>{{ 'homepage.work.derham.title' | trans }}</h3>
                    <h5 class="title-separation x-long-sep magenta-sep">
                        <span></span>
                        {{ 'homepage.work.derham.baseline' | trans }}
                    </h5>
                </hgroup>
            </a>
            <a id="urturn" href="{{ path('portfolio_show', { slug: 'urturn' }) }}">
                <hgroup>
                    <h3>{{ 'homepage.work.urturn.title' | trans }}</h3>
                    <h5 class="title-separation x-long-sep magenta-sep">
                        <span></span>
                        {{ 'homepage.work.urturn.baseline' | trans }}
                    </h5>
                </hgroup>
            </a>
        </div>
    </div>

    <div id="antistatique">
        <div class="about-us with-aside">
            <aside id="contact-us">
                <div id="work-together">
                    <h3 class="title-separation">
                        <span></span>
                        {{ 'antistatique.contact.work.title' | trans }}
                    </h3>
                    <p>
                        <a href="tel:0041216236303">+41 21 623 63 03</a><br/>
                        <a href="mailto:hello@antistatique.net">hello@antistatique.net</a>
                    </p>
                </div>
                {% include '_sidebar_contact.html.twig' %}
            </aside>
            <article id="our-mission">
                <h1 class="title-separation long-sep">
                    <span></span>
                    {{ 'antistatique.mission.title' | trans }}
                </h1>
                <p>{{ 'antistatique.mission.description' | trans }}</p>
                <a href="{{ path('team') }}" class="btn">{{ 'antistatique.mission.link' | trans }}</a>
            </article>
        </div>
    </div>

